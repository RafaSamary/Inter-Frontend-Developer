{ 
  "compilerOptions": {
    "target": "es2019",                               
    "module": "commonjs",                             
    "esModuleInterop": true, 
    "rootDir": "src", 
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "outDir": "./dist",  
    "removeComments": true,  
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                    
    "skipLibCheck": true                                 
  }
}

